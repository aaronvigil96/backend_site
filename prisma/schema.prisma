generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id Int @id @default(autoincrement())
  email String @unique
  password String
}

model Product {
  id Int @id @default(autoincrement())
  name String
  price Int
  quantity Int @default(0)
  img String
  isActive Boolean @default(true)
  category Category @relation(fields: [categoryId], references: [id])
  categoryId Int
}

model Category {
  id Int @id @default(autoincrement())
  name String @unique
  isActive Boolean @default(true)
  products Product[]
}